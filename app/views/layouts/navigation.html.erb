<!DOCTYPE html>
<html>
<head>
  <title>Lunch Rabbit</title>
    <meta property="og:title" content="Lunch Rabbit" />
    <meta property="og:type" content="social" />
    <meta property="og:url" content="http://glowing-moon-5161.heroku.com/" />
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>

    <!-- Include support librarys first -->
    <script type="text/javascript" src="/javascripts/jquery.js"></script> 
    <script type="text/javascript" src="/javascripts/jquery-ui.js"></script>
    <link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap.css"> 

    <style type="text/css">
      body {
        padding-top: 15px;
      }
      #map-canvas {
        height: 300px;
	width:	450px;
      }
    </style>
    
</head>
<body>
  <div id="fb-root"></div>
  <script>
      window.fbAsyncInit = function() {
        FB.init({appId: APP_ID, status: true, cookie: true, xfbml: true,  oauth: true});
        FB.Event.subscribe('auth.logout', function(response){
          window.location = HOST + $("#app_paths")[0].getAttribute("data-oauth-path");
        });
      };
      (function() {
        var e = document.createElement('script');
	e.type = 'text/javascript';
	e.src = document.location.protocol + '//connect.facebook.net/en_US/all.js';
	e.async = true;
	document.getElementById('fb-root').appendChild(e);
      }());
  </script>
  <div id="app_paths" data-oauth-path="<%= oauth_new_path %>" data-home-path="<%= home_path %>" data-logout-path="<%= logout_path %>" />
  <div>
        <div class="container-fluid">
        	<img class="brand" src="http://swdf.in2teck.com/images/lunch_logo_thumb.jpg">
		<div style="float: right; margin-right: 50px;">
                <%= button_to "Find a lunch now!", home_path(:limit => 100), :class => "btn", :style => "float: left; margin-top: 40px; margin-right: 10px;", :method => :get %>
                  <div class="menu-pull-right">
    			<span class="left"></span>
    			<ul>
      				<li><a href="/home" <%= @home_active =%> target="_self">Home</a></li>
				<li><a href="/myprofile" <%= @myprofile_active =%> target="_self">My Profile</a></li>
      				<li><a href="">&#8595;</a>
        			<div class="sub">
          	      		<ul>
              				<li><a href="/help" <%= @help_active =%> target="_self">Help</a></li>
      					<li><a href="/logout" target="_self">Logout</a></li>
       				</ul>
                        </ul>
  		  </div>
	        </div>
        </div>
      
    </div>

    <div class="container-fluid">
      <div class="sidebar">
        <div class="well">
          <h5>My Lunch Requests</h5> </br>
          <p>Received</p>
          <ul class="unstyled" style="margin-left: 10px;">
            <% @invitaciones_recibidas.take(6).each do |invitacion|%>
            <li>
              <div style="float:left;">
                <a href="<%= profile_path(invitacion.usuario_desde_id)%>"><%= Usuario.find(invitacion.usuario_desde_id).nombre[0..14] %></a>
              </div>
              <div style="float:right; width: 50px; height: 15px;">
              <% if invitacion.aceptada %>
                Confirmed
              <% else %>
                <%= link_to '', "/invitaciones/acepta/#{invitacion.id}", :method => :acepta, :class => 'inv_acepta' %>
                <%= link_to '', "/invitaciones/rechaza/#{invitacion.id}", :confirm => 'Are you sure?', :method => :rechaza, :class => "inv_niega" %>
              <% end %>
              </div>
            <br/>
            </li>
            <% end %>  
          </ul>
          <br/>
          <p>Sent</p>
          <ul class="unstyled" style="margin-left: 10px;">
            <% @invitaciones_enviadas.take(6).each do |invitacion|%>
            <li>
              <div style="float: left;">
                <a href="<%= profile_path(invitacion.usuario_para_id)%>"><%= Usuario.find(invitacion.usuario_para_id).nombre[0..14] %></a>
              </div>
              <div style="float: right; width: 50px;">
                <% if invitacion.aceptada %>
                  Confirmed
                <% else %>
                  Pending
                <% end %>  
              </div>
              <br/>
            </li>
            <% end %>
          </ul>
          <br/>
          <div style="text-align: center;">
            <a href="<%= muestra_invitaciones_path(@usuario.id) %>">view all</a>
          </div>
        </div>
      </div>
      <div class="content">

        <%= yield %>
  
        <footer>
          <p>&copy; Lunch Rabbit 2011</p>
        </footer>
      </div>

</body>
</html>
