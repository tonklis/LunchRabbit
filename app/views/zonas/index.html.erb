<h1>Listing zonas</h1>

<table>
  <tr>
    <th>Usuario</th>
    <th>Nombre</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th>Radio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @zonas.each do |zona| %>
  <tr>
    <td><%= zona.usuario_id %></td>
    <td><%= zona.nombre %></td>
    <td><%= zona.longitude %></td>
    <td><%= zona.latitude %></td>
    <td><%= zona.radio %></td>
    <td><%= link_to 'Show', zona %></td>
    <td><%= link_to 'Edit', edit_zona_path(zona) %></td>
    <td><%= link_to 'Destroy', zona, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

