<%= form_for @usuario, :url => actualiza_path(@usuario.facebook_id), :html => {:method => :post} do |usuario| %>
<div class="row">
  <div class="span8"> 
    <div class="row">
      <div class="span3">
        <%= image_tag @usuario.thumbnail %> 
      </div>
      <div class="span5"> 
        <h3><%= @usuario.nombre %> </h3>
        <p>Lunches from <%= @usuario.hora_lunch_inicio%> hrs to <%= @usuario.hora_lunch_fin%> hrs. </p>
        <%= hidden_field_tag :zona%>
      </div>
    </div>
    <div class="row">
      <div class="span3">
      </div>
    </div>
	<div class="span5">
	  <h5>Interests</h5>
		<ul>
		<% @intereses.each do |interes|%>
		  <li><%= interes.nombre %></li>
		<% end %>
		</ul>
	  </div>
	</div>
</div>
<br/>
<p><%= submit_tag "Save", :class => "btn primary", :onclick => "agrega_posicion()" %></p>
<% end %>
