<%= form_for @usuario, :url => actualiza_path(@usuario.facebook_id), :html => {:method => :post} do |usuario| %>
<div class="row">
  <div class="span16"> 
    <div class="row">
      <div class="span2">
        <%= image_tag @usuario.thumbnail %> 
      </div>
      <div class="span5"> 
        <h3><%= @usuario.nombre %> </h3>
        <p>Lunches from <%= @usuario.hora_lunch_inicio%> hrs to <%= @usuario.hora_lunch_fin%> hrs. </p>
        <%= hidden_field_tag :zona%>
      </div>
    </div>
    <div class="row">
      <div class="span3">
      </div>
    </div>
	
	  <h5>Interests</h5>
		  Music: <% @interesesMusica.each do |musica|%> <%= musica.nombre %>,<% end %>
	 
	</div>
</div>
<br/>
<p><%= submit_tag "Let's have lunch", :class => "btn primary", :onclick => "enviar_invitacion()" %></p>
<% end %>
