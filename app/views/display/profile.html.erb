<%= form_for @usuario, :url => actualiza_path(@usuario.facebook_id), :html => {:method => :post} do |usuario| %>
<div class="row">
  <div class="span16"> 
    <div class="row">
      <div class="span2">
        <%= image_tag @usuario.thumbnail %> 
      </div>
      <div class="span5"> 
        <h3><%= @usuario.nombre %> </h3>
        <p>Lunches from <%= @usuario.hora_lunch_inicio%> hrs to <%= @usuario.hora_lunch_fin%> hrs. </p>
        <%= hidden_field_tag :zona%>
      </div>
    </div>
    <div class="row">
      <div class="span3">
      </div>
    </div>
	
	  <h5>Interests</h5>
		<b>Music:</b> <% @intereses_music.each do |music|%> <%= music.nombre %>,<% end %><br>
		<b>Movies:</b> <% @intereses_movies.each do |movie|%> <%= movie.nombre %>,<% end %><br>
		<b>TV:</b> <% @intereses_tv.each do |tv|%> <%= tv.nombre %>,<% end %><br>
		<b>Books:</b> <% @intereses_books.each do |book|%> <%= movie.book %>,<% end %><br>
		<b>Other:</b> <% @intereses_other.each do |other|%> <%= other.nombre %>,<% end %><br>
	</div>
</div>
<br/>
<p><%= submit_tag "Let's have lunch", :class => "btn primary", :onclick => "enviar_invitacion()" %></p>
<% end %>
